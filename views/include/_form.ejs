
<form action="/api/products" method="POST" id="add_product">
    <div class="new_product">
        <div class="form-group">
            <label for="nomeProduto" class="text-dark">Nome Produto</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="nomeProduto" value="" placeholder="Insira o nome ou modelo">
        </div>
        <div class="form-group">
            <label for="categoriaProduto" class="text-light">Categoria</label>
            <input type="text" name="categoriaProduto" value="" placeholder="Categoria do produto">
        </div>
        <div class="form-group">
            <label for="tipoProduto" class="text-light">Tipo </label>
            <input type="text" name="tipoProduto" value="" placeholder="Tecido">
        </div>
        <div class="form-group">
            <label for="precoProduto" class="text-light">Preço</label>
            <input type="number" name="precoProduto" value="" placeholder="Preço do produto">
        </div>
        
        <div class="form-group">
            <button type="submit">Cadastrar</button>
        </div>

    </div>
    
</form>